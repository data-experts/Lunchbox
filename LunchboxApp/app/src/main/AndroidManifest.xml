<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.data_experts.lunchbox.android.client"
    android:versionCode="6"
    android:versionName="1.1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:theme="@android:style/Theme.DeviceDefault.Light"
        android:usesCleartextTraffic="true">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity
            android:name="de.data_experts.lunchbox.android.client.MainActivity"
            android:label="@string/app_name" android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="de.data_experts.lunchbox.android.client.InfoActivity"
            android:label="@string/app_name" android:screenOrientation="locked">
            
        </activity>
        <activity 
            android:name="de.data_experts.lunchbox.android.client.SettingsActivity"
            android:label="@string/app_name" android:screenOrientation="locked">
            
            
        </activity>
    </application>

</manifest>